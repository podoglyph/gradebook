<div class="row teacher-course">

  <h1>Viewing <%= @course_data[:course_name] %>, <%= @course_data[:semester_term] %> </h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Student</th>
        <th scope="col">Grade</th>
      </tr>
    </thead>
    <tbody>
      <% @student_data.each_with_index do |student, i| %>
      <tr>
        <th scope="row"><%= i += 1%></th>
        <td><%= student.first_name %> <%= student.last_name %></td>
        <td><%= student.grade %></td>
      </tr>
      <% end %>
    </tbody>
</table>

</div>
